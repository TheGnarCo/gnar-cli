{
  "name": "gnar-cli",
  "version": "0.0.11",
  "description": "Add Gnar approved configurations to your apps in a jiffy",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "repository": "https://github.com/TheGnarCo/gnar-cli",
  "author": "Blake Williams, Alex Jarvis, and the team at https://www.thegnar.com/",
  "license": "MIT",
  "scripts": {
    "build": "bin/build",
    "build:watch": "tsc -w -p .",
    "dev": "node .",
    "docs": "typedoc --options ./typedoc.json -gitRevision $npm_package_version",
    "lint": "eslint . -c .eslintrc.json --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "test:ci": "yarn test --runInBand",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "postinstall": "husky install",
    "prepublish": "yarn build",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "postversion": "git push --no-verify && git push --tags --no-verify",
    "prettify": "prettier '*.{js,ts,tsx}' '{src,app,__tests__}/**/*.{js,ts,tsx}' --write"
  },
  "files": [
    "dist/**/*"
  ],
  "bin": {
    "gnar": "dist/index.js"
  },
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@types/lodash": "^4.14.102",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-regexp": "^1.6.0",
    "husky": "^7.0.4",
    "jest": "^27.0.0",
    "jest-mock-axios": "^4.5.0",
    "lint-staged": "^12.3.7",
    "pinst": "^2.1.6",
    "prettier": "^2.6.2",
    "semver": "^7.3.6",
    "ts-jest": "^27.0.0",
    "typedoc": "^0.22.10",
    "typedoc-plugin-merge-modules": "^3.1.0",
    "typescript": "~4.6.0",
    "yarn": "^1.22.0"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "commander": "^9.1.0",
    "lodash": "^4.17.21"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn lint --cache --fix",
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
